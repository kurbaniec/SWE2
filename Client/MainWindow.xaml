<Window x:Class="SWE2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SWE2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <!-- Column definition -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <!-- Components -->
        <TextBlock Name="Counter" HorizontalAlignment="Center" 
                   VerticalAlignment="Center" FontSize="72">
            0
        </TextBlock>
        <Button Grid.Column="1" Name="Button" FontSize="72" Click="Button_OnClick">+</Button>
    </Grid>
</Window>
                